{
  "manifest_version": 2,
  "name": "Clip Amazon Coupons",
  "short_name": "AMZN Coupons",
  "description": "Automatically clip coupons on Amazon",
  "homepage_url": "https://github.com/damonbauer/amazon-coupons",
  "author": "Damon Bauer",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "1024": "icons/icon-1024.png"
  },

  "content_scripts": [
    {
      "js": ["clip.js"],
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.nl/*",
        "*://*.amazon.se/*",
        "*://*.amazon.pl/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.in/*",
        "*://*.amazon.cn/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.sg/*",
        "*://*.amazon.ae/*",
        "*://*.amazon.sa/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.com.tr/*",
        "*://*.amazon.eg/*"
      ]
    }
  ]
}
